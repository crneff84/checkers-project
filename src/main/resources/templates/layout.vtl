<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link href="https://fonts.googleapis.com/css?family=Homemade+Apple|Ubuntu|VT323" rel="stylesheet">
    <link rel='stylesheet' href='/css/bootstrap.min.css' type="text/css">
    <link rel='stylesheet'  href='/css/app.css' type="text/css">
    <title>Checkers</title>
  </head>
  <body>
    <div class="container" id="layout-container">
      <div class="jumbotron">
        <h1>CHECK YRSELF</h1>
        #if($gameOver)
          <h1 id="gameOver">player$playerTurn Wins</h1>
        #end
      </div>
      <div class="row">
        <div class="col-md-4 col-md-offset-4" id="nav-buttons">
          <nav class="navbar navbar-light bg-faded">
            <ul class="nav navbar-nav">
              <li class="nav-item active">
                <a href="/" class="btn btn-default nav-btn">Home</a>
              </li>
              <li class="nav-item active">
                <a href="/about" class="btn btn-default nav-btn">About</a>
              </li>
                #if($loggedInStatus != true)
                <li class="nav-item active">
                  <a href="/login" class="btn btn-default nav-btn">Login</a>
                </li>
                #else
                <li class="nav-item active">
                  <a href="/user-page" class="btn btn-default nav-btn">My Account</a>
                </li>
                #end
              </ul>
            </div>
        </nav>
      </div>
          #parse( $template )
    </div>
  </body>
</html>
